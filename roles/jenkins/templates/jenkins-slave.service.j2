
[Unit]
Description=Jenkins Slave
Wants=network.target
After=network.target

[Service]
ExecStart=/usr/bin/java -Xms512m -Xmx512m -jar /opt/jenkins/slave.jar -jnlpUrl {{ JENKINS_SERVER }}  -secret {{ SECRET }} 
User=jenkins
Restart=always
RestartSec=10
StartLimitInterval=0

[Install]
WantedBy=multi-user.target